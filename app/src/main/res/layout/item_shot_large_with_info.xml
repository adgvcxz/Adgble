<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.adgvcxz.adgble.content.Shot" />

        <import type="com.adgvcxz.adgble.util.ThemeUtil" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:cardColorTheme="@{ThemeUtil.theme}"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    app:actualImageScaleType="focusCrop"
                    app:imageUrl="@{item.user.avatarUrl}"
                    app:placeholderImageScaleType="focusCrop"
                    app:roundAsCircle="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="@{item.user.username}"
                        android:textSize="18sp"
                        app:textPrimaryColor="@{ThemeUtil.theme}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="@{item.updatedAt}"
                        android:textSize="16sp"
                        app:textSecondColor="@{ThemeUtil.theme}" />
                </LinearLayout>
            </LinearLayout>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@id/item_shot_image"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                app:actualImageScaleType="focusCrop"
                app:imageUrl="@{item.images.hidpi}"
                app:thumbnail="@{item.images.teaser}" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>