<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary_light</item>
