<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary_dark</item>
        <item name="colorPrimaryDark">@color/color_primary_status_bar_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="itemShotLike">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingLeft">48dp</item>
        <item name="android:paddingBottom">@dimen/item_shot_likes_padding</item>
        <item name="android:paddingTop">@dimen/item_shot_likes_padding</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
